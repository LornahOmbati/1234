<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_drivers_lessons_videos"
    android:layout_below="@+id/toolbar"
    android:layout_marginTop="50dp"
    android:background="@drawable/bg_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_gravity="top">

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:background="@color/gray"
            android:id="@+id/youtube_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
        </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>


        <Button
            android:id="@+id/fetch_video_btn"
            android:layout_width="match_parent"
            android:layout_below="@+id/enter_idLyt"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            android:textStyle="normal"
            android:textSize="14dp"
            android:text="CLICK TO LOAD VIDEO"
            android:textColor="@color/black" />

    </LinearLayout>


    <Button
        android:id="@+id/btnProceedToQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/squarebtn"
        android:textColor="@color/white"
        android:text="PROCEED TO QUIZ"
        android:textSize="20sp" />

</RelativeLayout>