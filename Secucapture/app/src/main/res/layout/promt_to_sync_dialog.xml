<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/prompt_style"
        android:id="@+id/data_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="start"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:text="Hello User!"
            android:textColor="@color/viewfinder_laser"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Please Sync First To Proceed.\n\nClick button below."
            android:textColor="@color/black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/firstTimeSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:background="@color/wheat"
            android:text="Sync"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/sync"
            android:textSize="17dp"/>

    </LinearLayout>
</RelativeLayout>