<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DashboardActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_main">

    <!--Header-->
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:minHeight="60dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/logo_main_white"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </LinearLayout>

    <!--Page content-->

    <LinearLayout
        android:layout_below="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!--Row 1-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!--Driver registration-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/driver_reg_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/driver_registration"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/driver_reg_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRIVER REGISTRATION"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/GREY"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Registration Driver Module"
                    android:textColor="@color/GREY"
                    android:textSize="11sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />

            </LinearLayout>

            <!--Driver Assessment-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/driver_assess_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/driver_test"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/driver_assess_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRIVER ASSESMENT"
                    android:textSize="11sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/GREY"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Lessons and Tests"
                    android:textColor="@color/GREY"
                    android:textSize="11sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />

            </LinearLayout>


        </LinearLayout>

        <!--Row 2-->

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!--Vehicle Registration-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/vehicle_reg_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/truck_reg"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/vehicle_reg_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VEHICLE REGISTRATION"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/GREY"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Register vehicle Module"
                    android:textColor="@color/GREY"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText,TextContrastCheck" />

            </LinearLayout>

            <!--Vehicle Assessment-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/vehicle_assess_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/truck_inspection"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/vehicle_assess_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VEHICLE ASSESSMENT"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/GREY"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Assess vehicle"
                    android:textColor="@color/GREY"
                    android:textSize="11sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--Footer-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/red"
        android:minHeight="60dp">

        <TextView
            android:id="@+id/sync"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SYNC [ ]"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</RelativeLayout>